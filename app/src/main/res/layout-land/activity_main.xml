<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context="com.example.android.helloandroid.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/gradient_background"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/logoIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-16dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/roundicon"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/udacity_green" />

        <ImageView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            app:srcCompat="@drawable/udacity_txt" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/postal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:drawablePadding="16dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:text="Mountain View, CA 94043"
            android:textColor="@color/colorGray"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@android:drawable/ic_menu_send"
            android:drawablePadding="16dp"
            android:fontFamily="@font/roboto"
            android:gravity="right|center_vertical"
            android:text="2465 Latham"
            android:textColor="@color/colorGray"
            android:textStyle="italic"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            android:drawablePadding="16dp"
            android:drawableRight="@android:drawable/ic_menu_call"
            android:fontFamily="@font/roboto"
            android:gravity="right|center_vertical"
            android:text="650-555-5555"
            android:textColor="@color/colorGray"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>

